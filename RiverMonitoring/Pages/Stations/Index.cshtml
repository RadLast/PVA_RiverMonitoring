@page
@model RiverMonitoring.Pages.Stations.IndexModel
@{
    ViewData["Title"] = "Stations";
}

<div class="text-center m-4">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-info" role="alert">
        @Model.StatusMessage
    </div>
}

<div class="card transparent-card m-4">
    <div class="card-body">
        @if (Model.Stations != null && Model.Stations.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Location</th>
                        <th>Timeout</th>
                        <th>Flood Warning Value</th>
                        <th>Drought Warning Value</th>
                        @if (User.IsInRole("Admin") || User.IsInRole("Write"))
                        {
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var station in Model.Stations)
                    {
                        <tr>
                            <td>@station.Title</td>
                            <td>@station.Location</td>
                            <td>@station.Timeout</td>
                            <td>@station.FloodWarningValue</td>
                            <td>@station.DroughtWarningValue</td>
                            @if (User.IsInRole("Admin") || User.IsInRole("Write"))
                            {
                                <td class="d-flex">
                                    <a asp-page="Details" asp-route-id="@station.Id" class="btn btn-primary m-1">Details</a>
                                    <a asp-page="Edit" asp-route-id="@station.Id" class="btn btn-warning m-1">Edit</a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@station.Id" class="d-inline m-1" onsubmit="return confirm('Are you sure you want to delete this station?');">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No stations found.</p>
        }

        @if (User.IsInRole("Admin") || User.IsInRole("Write"))
        {
            <a asp-page="Create" class="btn btn-success">Create new station</a>
        }
    </div>
</div>

<div class="card transparent-card m-4">
    <div class="card-body">
        <div id="map" style="height: 600px;"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
        function initMap() {
            var map = L.map('map').setView([40.7128, -74.0060], 5);

            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '© OpenStreetMap'
            }).addTo(map);

            var stations = @Html.Raw(Json.Serialize(Model.Stations));

            stations.forEach(function (station) {
                if (station.latitude && station.longitude) {
                    var marker = L.marker([station.latitude, station.longitude]).addTo(map);
                    marker.bindPopup(station.title);
                }
            });
        }

        window.onload = initMap;
    </script>
}
