@page
@model RiverMonitoring.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="text-center m-4">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div class="d-flex justify-content-center" style="margin-top: 30px;">
    <div class="col-4 card transparent-card">
        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-danger m-2" role="alert">
                @Model.StatusMessage
            </div>
        }
        <form method="post">
            @if (string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            }
            <div class="form-group m-2">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" maxlength="30" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" maxlength="100" type="email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control" maxlength="50" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group m-2 d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Register</button>
                <a asp-page="./Login" class="btn btn-outline-secondary">Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
