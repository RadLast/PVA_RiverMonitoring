@page
@model RiverMonitoring.Pages.Users.EditModel
@{
    ViewData["Title"] = $"Edit {Model.EditUser.UserName}";
}

<div class="text-center m-4">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div class="d-flex justify-content-center" style="margin-top: 30px;">
    <div class="col-4 card transparent-card">
        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-success m-2" role="alert">
                @Model.StatusMessage
            </div>
        }

        <form method="post">
            <input type="hidden" asp-for="EditUser.Id" />
            <input type="hidden" asp-for="EditUser.UserName" />
            <div class="form-group m-2">
                <label asp-for="EditUser.Email"></label>
                <input asp-for="EditUser.Email" class="form-control" />
                <span asp-validation-for="EditUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="EditUser.FullName"></label>
                <input asp-for="EditUser.FullName" class="form-control" />
                <span asp-validation-for="EditUser.FullName" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label asp-for="EditUser.AccessLevel"></label>
                <select asp-for="EditUser.AccessLevel" class="form-control">
                    <option value="Read">Read</option>
                    <option value="Write">Write</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="EditUser.AccessLevel" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success m-2">Save</button>
                <a asp-page="Index" class="btn btn-secondary m-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
